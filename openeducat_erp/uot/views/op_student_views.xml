<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_op_student_form_inherited" model="ir.ui.view">
        <field name="name">openeducat_core.view_op_student_form.inherited</field>
        <field name="model">op.student</field>
        <field name="inherit_id" ref="openeducat_core.view_op_student_form"/>
        <field name="arch" type="xml">
            <field name="nationality" position="after">
                <field name="type_of_study" />
            </field>
            <field name="visa_info" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="partner_id" position="after">
                <field name="start_year" />
                <field name="start_only_year" />
            </field>
        </field>
    </record>
</odoo>
